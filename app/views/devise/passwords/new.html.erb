<div class="row" style="width: 94%;margin: 0 auto">
  <div class="col-sm-3">
  </div>
  <div class="col-sm-6" style="background: #ECECEC; padding: 15px;border-radius: 10px;box-shadow: 6px 6px 6px #888888;">
    <h2>Forgot your password?</h2>
    <%= form_for resource, :as => resource_name, :url => password_path(resource_name), :html => { :class => 'form-horizontal', :role =>"form" } do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.label :email, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.email_field :email, :autofocus => true,  :class => "form-control", :placeholder => "Password" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Send me reset password instructions", :class => "btn btn-primary" %>
        </div>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
  <div class="col-sm-3">

  </div>

</div>

