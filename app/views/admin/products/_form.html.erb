
<%= form_for [:admin,@product], :html => { :class => 'form-horizontal', :role =>"form" } do |f| %>
  <%= render :partial => "shared/errors", :locals => {:item => @product} %>
  <div class="form-group" style="margin-top: 10px">
    <%= f.label :title, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :title, :class => "form-control", :placeholder => "Title" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :description, :class => "form-control", :placeholder => "Description", :style => "height:100px" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :price, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.number_field :price, :class => "form-control", :placeholder => "Price" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :discount, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.number_field :discount, :class => "form-control", :placeholder => "Discount" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :quantity, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.number_field :quantity, :class => "form-control", :placeholder => "Quantity" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :category, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.collection_select :category_id, Category.all, :id, :title,{:include_blank => "Select", :promt => "please select"},{:class => "form-control"}  %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-default" %>
    </div>
  </div>
<% end %>